          "Args": {
            "path": "D:/ManageProductLogging/log.json",
            "rollOnFileSizeLimit": true,
            "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact",
            "rollingInterval": "Day",
            "outputTemplate": "Th·ªùi gian : [{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] | Level : [{Level}]  | {Message} |  Path :{RequestPath}   {NewLine}  {Exception}"

          }
        }
      ],
      "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ]
    },
  
}

